WEB_URL=$1
echo "[`hostname`]"

# Install Hadoop
[ -d "/opt/hadoop-2.10.1" ] && echo "Hadoop is already exists"
[ ! -d "/opt/hadoop-2.10.1" ] && echo -n "Install Hadoop... " && wget -qO - "$WEB_URL/pkg/hadoop-2.10.1.tar.gz" | sudo tar -zxvf - -C /opt &>/dev/null  && echo "OK"
# Install Pig
[ -d "/opt/pig-0.17.0" ] && echo "Pig is already exists" 
[ ! -d "/opt/pig-0.17.0" ] && echo -n "Install Pig... " && wget -qO - "$WEB_URL/pkg/pig-0.17.0.tar.gz" | sudo tar -zxvf - -C /opt &>/dev/null  && echo "OK"
# Install Hive
[ -d "/opt/apache-hive-2.3.7-bin" ] && echo "Hive is already exists" 
[ ! -d "/opt/apache-hive-2.3.7-bin" ] && echo -n "Install Hive... " && wget -qO - "$WEB_URL/pkg/apache-hive-2.3.7-bin.tar.gz" | sudo tar -zxvf - -C /opt &>/dev/null  && echo "OK"
# Install Tez
[ -d "/opt/apache-tez-0.9.2-bin" ] && echo "Tez is already exists" 
[ ! -d "/opt/apache-tez-0.9.2-bin" ] && echo -n "Install Tez... " && sudo mkdir -p /opt/apache-tez-0.9.2-bin/conf && wget -qO - "$WEB_URL/pkg/apache-tez-0.9.2-bin.tar.gz" |  sudo tar -zxvf - -C /opt &>/dev/null && echo "OK"

# SSH Environment
wget -qO - "$WEB_URL/config/environment" | sudo tee ~/.ssh/environment &>/dev/null
[ "$?" == "0" ] && echo "environment copied"

# /etc/hosts
wget -qO - "$WEB_URL/config/hosts" | sudo tee /etc/hosts &>/dev/null
[ "$?" == "0" ] && echo "hosts copied"

# HADOOP CONFIG
for xml in core-site.xml  hdfs-site.xml mapred-site.xml yarn-site.xml
do
  wget -qO - $WEB_URL/config/$xml | sudo tee /opt/hadoop-2.10.1/etc/hadoop/$xml &>/dev/null
  [ "$?" == "0" ] && echo "$xml copied"
done

# Pig Config
for xml in pig.properties log4j.properties
do
  wget -qO - "$WEB_URL/config/$xml" | sudo tee /opt/pig-0.17.0/conf/$xml &> /dev/null
  [ "$?" == "0" ] && echo "$xml copied"
done

# Tez Config
for xml in tez-site.xml
do
  wget -qO - "$WEB_URL/config/$xml" | sudo tee /opt/apache-tez-0.9.2-bin/conf/$xml &> /dev/null
  [ "$?" == "0" ] && echo "$xml copied"
done
echo ""
